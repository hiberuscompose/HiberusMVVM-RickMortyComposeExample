<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".ui.CustomApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HiberusTemplate">
        <activity
            android:name=".ui.compose.ComposeUiActivity"
            android:exported="false"
            android:label="@string/title_activity_compose_ui"
            android:theme="@style/Theme.HiberusTemplate" />
        <activity
            android:name=".ui.classic.ClassicUiActivity"
            android:exported="false" />
        <activity
            android:name=".ui.composetesting.TestingComposeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.paparazzi.TestingPaparazziActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.HiberusTemplate">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>